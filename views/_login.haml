- if session[:person_id]
  - person = Person.find(session[:person_id])

%ul
  - if session[:person_id]
    %li
      = person.email
      - unless person.email_verified
        = link_to '/email_verification', "unverified"
    %li= link_to '/settings', "Settings"
    %li= link_to '/change_password', "Change password"
    %li= link_to '/logout', "Logout"
  - else
    %li= link_to '/login', "Login"
    %li= link_to '/register', "Register"